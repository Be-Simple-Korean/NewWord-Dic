<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/dlg_shape"
    android:layout_width="330dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/b_w_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="제목"
        android:fontFamily="@font/reco"
        android:paddingLeft="20dp"
        android:textSize="35sp"
        android:textColor="@color/blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/b_w_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성자"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천"/>
        <TextView
            android:id="@+id/b_w_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textColor="@color/blue"
            android:text="숫자"/>
    </LinearLayout>

    <TextView
        android:id="@+id/b_w_meaning"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp"
        android:text="동해물과 백두산이 마르고 닳도록 남산 하늘 저 아래 소나무 산기슭이"
        android:paddingLeft="25dp"
        android:paddingRight="20dp"
        android:textColor="#000"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="10dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"
                android:text="삭제"
                android:visibility="invisible"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/b_w_recom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textSize="25sp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/blue"
                android:layout_alignParentRight="true"
                android:text="추천"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>